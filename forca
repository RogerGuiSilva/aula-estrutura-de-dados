#include <stdio.h>
#include <string.h>

int main() {
    char palavra[] = "cachorro";
    char dica[20];
    int tentativas = 6;
    char letra;
    int acertos = 0;
    int tamanho = strlen(palavra);

    for (int i = 0; i < tamanho; i++) {
        dica[i] = '_';
    }
    dica[tamanho] = '\0';

    printf("=== Jogo da Forca ===\n");

    while (tentativas > 0 && acertos < tamanho) {
        printf("\nPalavra: %s\n", dica);
        printf("Tentativas restantes: %d\n", tentativas);
        printf("Digite uma letra: ");
        scanf(" %c", &letra);

        int erro = 1;
        for (int i = 0; i < tamanho; i++) {
            if (palavra[i] == letra && dica[i] == '_') {
                dica[i] = letra;
                acertos++;
                erro = 0;
            }
        }

        if (erro) {
            tentativas--;
            printf("Letra errada!\n");
        } else {
            printf("Boa! Você acertou uma letra.\n");
        }
    }

    if (acertos == tamanho) {
        printf("\nParabéns! Você venceu. A palavra era: %s\n", palavra);
    } else {
        printf("\nVocê perdeu! A palavra era: %s\n", palavra);
    }

    return 0;
}