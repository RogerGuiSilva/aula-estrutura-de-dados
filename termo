#include <stdio.h>
#include <string.h>

int main() {
    char palavra[] = "verde";
    char tentativa[10];
    int chances = 6;

    printf("=== Jogo do Termo ===\n");
    printf("Adivinhe a palavra de 5 letras!\n");

    while (chances > 0) {
        printf("\nTentativas restantes: %d\n", chances);
        printf("Digite sua tentativa: ");
        scanf("%s", tentativa);

        if (strlen(tentativa) != 5) {
            printf("A palavra precisa ter 5 letras!\n");
            continue;
        }

        if (strcmp(tentativa, palavra) == 0) {
            printf("Parabéns! Você acertou a palavra: %s\n", palavra);
            return 0;
        }

        printf("Resultado: ");
        for (int i = 0; i < 5; i++) {
            if (tentativa[i] == palavra[i]) {
                printf("[%c]", tentativa[i]);
            } else {
                int existe = 0;
                for (int j = 0; j < 5; j++) {
                    if (tentativa[i] == palavra[j]) {
                        existe = 1;
                        break;
                    }
                }
                if (existe) {
                    printf("(%c)", tentativa[i]);
                } else {
                    printf(" %c ", tentativa[i]);
                }
            }
        }
        printf("\n");

        chances--;
    }

    printf("\nSuas chances acabaram! A palavra era: %s\n", palavra);
    return 0;
}